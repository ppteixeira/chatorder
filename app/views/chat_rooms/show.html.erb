<section id="chat-window" class="">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center chat-msg-panel">
              <h2><%= @chat_room.title %></h2>

               <!-- providing the roomâ€™s id -->
              <div id="messages" data-chat-room-id="<%= @chat_room.id %>">
                <%= render @messages %>
              </div>


              <!-- New Message -->
              <%= form_for @message, url: '#' do |f| %>

                <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
                <div class="col-xs-10 form-group msgbox">

                  <%= f.text_field :body,
                                  class: 'form-control',
                                  rows: 2,
                                  placeholder: 'Type your message...' %>

                </div>
                <div class="col-xs-2 sendbtn">
                  <%= f.submit "Send", class: 'btn btn-warning'%>
                </div>
              <% end %>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>
