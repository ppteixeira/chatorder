<section id="chat-window" class="">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center chat-msg-panel">
              <p><%= @chat_room.title %></p>

               <!-- providing the roomâ€™s id -->
              <div id="messages" data-chat-room-id="<%= @chat_room.id %>">
                <%= render @messages %>
              </div>

              <hr>

              <!-- New Message -->
              <%= form_for @message, url: '#' do |f| %>
                <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
                <div class="form-group msgbox">
                  <%= f.label :Message %>
                  <%= f.text_area :body,
                                  class: 'form-control',
                                  rows: 2,
                                  placeholder: 'Type your message...' %>

                </div>
                <%= f.submit "Post", class: 'btn btn-primary btn-lg sendbtn'%>
              <% end %>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>
